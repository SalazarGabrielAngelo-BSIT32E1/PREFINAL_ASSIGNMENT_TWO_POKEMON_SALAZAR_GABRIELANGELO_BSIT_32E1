@model PokemonAppSalazar.Controllers.Pokemon

<h2>Pokémon Details - @Model.Name</h2>

<h3>Abilities:</h3>
<ul>
    @foreach (var abilityEntry in Model.Abilities)
    {
        <li>
            @abilityEntry.Ability.Name @(abilityEntry.IsHidden ? "(Hidden)" : "")
        </li>
    }
</ul>

<h3>Moves:</h3>
<ul>
    @foreach (var move in Model.Moves)
    {
        <li>
            @move.Move.Name
        </li>
    }
</ul>

